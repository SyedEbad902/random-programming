# Restaurant Order Management System

# Menu dictionary
menu = {
    "Pizza": 8.99,
    "Burger": 5.49,
    "Salad": 4.99,
    "Pasta": 7.99,
    "Soda": 1.99
}

# Function to display the menu
def display_menu():
    print("Menu:")
    for item, price in menu.items():
        print(f"{item}: ${price:.2f}")

# Function to add an item to the order
def add_to_order(order, item, quantity):
    if item in menu:
        if item in order:
            order[item] += quantity
        else:
            order[item] = quantity
        print(f"Added {quantity} {item}(s) to your order.")
    else:
        print(f"Sorry, {item} is not on the menu.")

# Function to view the current order
def view_order(order):
    if not order:
        print("Your order is currently empty.")
    else:
        print("Current Order:")
        for item, quantity in order.items():
            print(f"{item}: {quantity}")

# Function to calculate the total cost of the order
def calculate_total(order):
    total = 0.0
    for item, quantity in order.items():
        total += menu[item] * quantity
    return total

# Main function to run the program
def main():
    order = {}
    while True:
        print("\nWelcome to the Restaurant Order Management System!")
        print("1. View Menu")
        print("2. Place Order")
        print("3. View Current Order")
        print("4. Calculate Total Bill")
        print("5. Exit")
        
        try:
            choice = int(input("Select an option: "))
        except ValueError:
            print("Invalid input. Please enter a number between 1 and 5.")
            continue

        if choice == 1:
            display_menu()
        elif choice == 2:
            item = input("Enter item name: ").strip()
            try:
                quantity = int(input("Enter quantity: "))
                if quantity < 1:
                    print("Quantity must be at least 1.")
                    continue
                add_to_order(order, item, quantity)
            except ValueError:
                print("Invalid quantity. Please enter a number.")
        elif choice == 3:
            view_order(order)
        elif choice == 4:
            total = calculate_total(order)
            print(f"Total Bill: ${total:.2f}")
        elif choice == 5:
            print("Thank you for visiting!")
            break
        else:
            print("Invalid option. Please select a number between 1 and 5.")

if __name__ == "__main__":
    main()
